<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_capital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left|center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/font_goyangilsan"
            android:text="음료명"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/font_goyangilsan"
            android:gravity="center|center_vertical"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left|center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/font_goyangilsan"
            android:text="가격"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/font_goyangilsan"
            android:gravity="center|center_vertical"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_territory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left|center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/font_goyangilsan"
            android:text="종류"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/font_goyangilsan"
            android:gravity="center|center_vertical"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left|center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/font_goyangilsan"
            android:text="사이즈"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/font_goyangilsan"
            android:gravity="center|center_vertical"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/imageView_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            app:srcCompat="@mipmap/ic_can" />

    </FrameLayout>


</LinearLayout>